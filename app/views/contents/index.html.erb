<div class="container mt-5">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Content Library</h1>
        <% if policy(Content).create? %>
          <%= link_to "Create New Content", new_content_path, class: "btn btn-primary" %>
        <% end %>
      </div>

      <div class="row mb-4">
        <div class="col-md-3">
          <div class="card bg-light">
            <div class="card-body text-center">
              <h5>👶 Child Content</h5>
              <h3 class="text-primary"><%= @contents_by_age[:child].count %></h3>
              <small class="text-muted">Suitable for all ages</small>
            </div>
          </div>
        </div>
        <div class="col-md-3">
          <div class="card bg-light">
            <div class="card-body text-center">
              <h5>🧑‍🎓 Teen Content</h5>
              <h3 class="text-warning"><%= @contents_by_age[:teen].count %></h3>
              <small class="text-muted">Teens and adults</small>
            </div>
          </div>
        </div>
        <div class="col-md-3">
          <div class="card bg-light">
            <div class="card-body text-center">
              <h5>👨‍💼 Adult Content</h5>
              <h3 class="text-danger"><%= @contents_by_age[:adult].count %></h3>
              <small class="text-muted">Adults only</small>
            </div>
          </div>
        </div>
        <div class="col-md-3">
          <div class="card bg-primary text-white">
            <div class="card-body text-center">
              <h5>📚 Total Accessible</h5>
              <h3><%= @contents.count %></h3>
              <small>For your age group</small>
            </div>
          </div>
        </div>
      </div>

      <!-- Child Content Section -->
      <div class="card mb-4">
        <div class="card-header bg-success text-white">
          <h4 class="mb-0">👶 Child-Friendly Content</h4>
        </div>
        <div class="card-body">
          <% if @contents_by_age[:child].any? %>
            <div class="row">
              <% @contents_by_age[:child].each do |content| %>
                <div class="col-md-6 mb-3">
                  <div class="card h-100">
                    <div class="card-body">
                      <h6 class="card-title"><%= content.title %></h6>
                      <p class="card-text"><%= truncate(content.body, length: 120) %></p>
                      <div class="d-flex justify-content-between align-items-center">
                        <span class="badge bg-secondary"><%= content.content_type %></span>
                        <span class="badge bg-success">Suitable for all ages</span>
                      </div>
                      <div class="mt-2">
                        <%= link_to "View", content_path(content), class: "btn btn-sm btn-outline-success" %>
                        <% if policy(content).update? %>
                          <%= link_to "Edit", edit_content_path(content), class: "btn btn-sm btn-outline-primary" %>
                        <% end %>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-muted">No child-friendly content available yet.</p>
          <% end %>
        </div>
      </div>

      <!-- Teen Content Section -->
      <div class="card mb-4">
        <div class="card-header bg-warning text-dark">
          <h4 class="mb-0">🧑‍🎓 Teen Content</h4>
        </div>
        <div class="card-body">
          <% if @contents_by_age[:teen].any? %>
            <div class="row">
              <% @contents_by_age[:teen].each do |content| %>
                <div class="col-md-6 mb-3">
                  <div class="card h-100">
                    <div class="card-body">
                      <h6 class="card-title"><%= content.title %></h6>
                      <p class="card-text"><%= truncate(content.body, length: 120) %></p>
                      <div class="d-flex justify-content-between align-items-center">
                        <span class="badge bg-secondary"><%= content.content_type %></span>
                        <span class="badge bg-warning text-dark">Teens and adults</span>
                      </div>
                      <div class="mt-2">
                        <%= link_to "View", content_path(content), class: "btn btn-sm btn-outline-warning" %>
                        <% if policy(content).update? %>
                          <%= link_to "Edit", edit_content_path(content), class: "btn btn-sm btn-outline-primary" %>
                        <% end %>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-muted">No teen content available yet.</p>
          <% end %>
        </div>
      </div>

      <!-- Adult Content Section -->
      <div class="card mb-4">
        <div class="card-header bg-danger text-white">
          <h4 class="mb-0">👨‍💼 Adult Content</h4>
        </div>
        <div class="card-body">
          <% if @contents_by_age[:adult].any? %>
            <div class="row">
              <% @contents_by_age[:adult].each do |content| %>
                <div class="col-md-6 mb-3">
                  <div class="card h-100">
                    <div class="card-body">
                      <h6 class="card-title"><%= content.title %></h6>
                      <p class="card-text"><%= truncate(content.body, length: 120) %></p>
                      <div class="d-flex justify-content-between align-items-center">
                        <span class="badge bg-secondary"><%= content.content_type %></span>
                        <span class="badge bg-danger">Adults only</span>
                      </div>
                      <div class="mt-2">
                        <%= link_to "View", content_path(content), class: "btn btn-sm btn-outline-danger" %>
                        <% if policy(content).update? %>
                          <%= link_to "Edit", edit_content_path(content), class: "btn btn-sm btn-outline-primary" %>
                        <% end %>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-muted">No adult content available yet.</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
