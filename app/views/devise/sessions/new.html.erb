<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm">
        <div class="card-body">
          <div class="text-center mb-4">
            <img src="<%= asset_path('logo.png') %>" alt="AccessGate Logo" height="60" class="mb-3">
            <h2 class="mb-0">Sign In</h2>
          </div>
          <%= form_with(model: resource, as: resource_name, url: session_path(resource_name), html: { class: 'mb-3' }) do |f| %>
            <div class="mb-3">
              <%= f.label :email, class: 'form-label' %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
            </div>
            <div class="mb-3">
              <%= f.label :password, class: 'form-label' %>
              <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
            </div>
            <% if devise_mapping.rememberable? -%>
              <div class="mb-3 form-check">
                <%= f.check_box :remember_me, class: 'form-check-input' %>
                <%= f.label :remember_me, class: 'form-check-label' %>
              </div>
            <% end -%>
            <div class="d-grid gap-2 mb-3">
              <%= f.submit "Sign in", class: 'btn btn-primary' %>
            </div>
          <% end %>
          <div class="d-flex justify-content-between">
            <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'link-secondary' %>
            <%= link_to "Sign up", new_registration_path(resource_name), class: 'link-primary' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
