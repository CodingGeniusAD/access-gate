<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm">
        <div class="card-body">
          <h2 class="mb-4 text-center">Forgot your password?</h2>
          <%= form_with(model: resource, as: resource_name, url: password_path(resource_name), html: { class: 'mb-3' }) do |f| %>
            <div class="mb-3">
              <%= f.label :email, class: 'form-label' %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
            </div>
            <div class="d-grid gap-2 mb-3">
              <%= f.submit "Send me reset password instructions", class: 'btn btn-warning' %>
            </div>
          <% end %>
          <div class="d-flex justify-content-between">
            <%= link_to "Sign in", new_session_path(resource_name), class: 'link-primary' %>
            <%= link_to "Sign up", new_registration_path(resource_name), class: 'link-success' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
